
<div class="index-padding sign-in-page">
  <img src="assets/blowing-papers.png">
  </img>
    <%#= render "layouts/nav" %>
      <div class="center">
        
        <div class="js-sign-in">
          <h1 class="logo-splash">noted</h1>
          <h3 class="tagline">watch. learn. take better notes.</h3>

          <br>
          <br>

        	<%= form_tag(sessions_path) do %>

        	  <%= text_field_tag :email, nil, :placeholder => "Email" %><br><br>

        	  <%= password_field_tag :password, nil, :placeholder => "Password" %>

            <div class="error_message">
              <br><%= flash[:alert] %>
            </div>

            <div class="login_signup_buttons">
              <div id="login_button">
              <%= button_tag(type: "submit") do %>
                Login <i class="icon-repeat"></i>
              <% end %>
              </div>
            	<% end %>
              <div id="signup_button">
              <%= button_to "Sign Up", users_signup_path, :method => :get %> 
              </div>
            </div>
          </div>
          <div class="js-sign-up">

          </div>

   
  </div>
</div>
<%= render 'layouts/footer' %>