<h1>Sign Up</h1>

<div class="new_user_form">
	<%= form_for(@user) do |f| %>
		<%= render 'users/error_messages', object: @user %>
	
		<%= f.text_field :name, :placeholder => "Name" %><br/>

		<%= f.text_field :email, :placeholder => "Email" %><br/>

		<%= f.password_field :password, :placeholder => "Password" %><br/>

		<%= f.submit "Create New Account", class: "btn btn-large btn-primary" %>
	<% end %>
</div>