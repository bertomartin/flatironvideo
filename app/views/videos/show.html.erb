<nav class="navbar navbar-default navbar-fixed-top show-nav" role="navigation">
     
      <ul>
        <li class="col-xs-4">
           <div >
        <%= link_to "FlatironVideos", videos_path, id: "logo" %>
      </div>
        </li>
        <li class="col-xs-4"><%= link_to "Sign Up", users_path if !session[:user_id] %></li>
       
        <% if session[:user_id] %>
          <!-- user is logged in -->
          <li class="col-xs-4"><%= link_to "Sign Out", logout_path %><li>
        <% else %>
          <!-- user is NOT logged in -->
          <li class="col-xs-4"><%= link_to "Sign In", login_path %></li>
        <% end %>
    </ul>
  </nav> 


<!-- starting actual page -->
<div class="container">
  <div class="row">
    <!-- BEGINNING OF VIDEO SECTION -->

    <div id="video-container" class="col-xs-9"> 

      <!-- ACTUAL VIDEO -->
      <div id="video">    
        <h3><%= @video.name %></h3>
        <input type="hidden" id="video_id" value="<%= @video.id %>"></input>
        <div class="vjs_video_4_html5_api" autoplay="true" preload="auto">
            <%= videojs_rails sources: {mp4: @video.link} %>
        </div>
      </div>

      <!-- PLAYBAR STUFF -->
      <div id="playbar">
          <div id="timeline">
            <div class="new_note">
              <button>New Note</button>
            </div>
          </div>      
      </div>
    </div>

    <!-- END OF VIDEO SECTION -->

    <!-- BEGINNING OF NOTE SECTION -->

    <div id="notes" class="col-xs-3">
      <div id="note-all" class="note_all">
        <%= render "videos/note_all" %>   
      </div>
      <!-- is for NEW notes -->
      <div id="new-note">
        <div class="new_note_form new_note">         
          <%= render 'notes/new_form' %>
        </div>
        <div class="render-edit-form">
        </div>
      </div>      
    </div>
    <!-- END OF NOTE SECTION -->

  </div>
</div>



